<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tournamentNameInput" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="360dp" android:layout_marginRight="360dp" android:layout_marginTop="212dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="74dp"
            app:layout_constraintBottom_toTopOf="@+id/submitButton"
            app:layout_constraintStart_toEndOf="@+id/teamNameText" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tournamentLocationInput" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="360dp" android:layout_marginRight="360dp" android:layout_marginTop="324dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="74dp"
            app:layout_constraintBottom_toTopOf="@+id/submitButton"
            app:layout_constraintStart_toEndOf="@+id/teamNameText" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Create Tournament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tournamentLocationText"
    />
    <TextView
            android:text="@string/tournament_name"
            android:layout_width="260dp"
            android:layout_height="44dp"
            android:id="@+id/tournamentNameText" android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="214dp" android:layout_marginBottom="66dp"
            app:layout_constraintBottom_toTopOf="@+id/tournamentLocationText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="336dp"
            android:layout_marginStart="336dp" app:layout_constraintEnd_toStartOf="@+id/tournamentNameInput"
            android:layout_marginEnd="58dp" android:layout_marginRight="58dp"/>
    <TextView
            android:text="@string/tournament_loc"
            android:layout_width="296dp"
            android:layout_height="45dp"
            android:id="@+id/tournamentLocationText" android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="300dp" android:layout_marginStart="300dp" android:layout_marginTop="324dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="77dp"
            app:layout_constraintBottom_toTopOf="@+id/submitButton"
            app:layout_constraintEnd_toStartOf="@+id/teamNameInput"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>