<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="theirTimeouts"
            android:layout_width="173dp"
            android:layout_height="41dp"
            android:id="@+id/opponentTimeoutsText" app:layout_constraintStart_toEndOf="@+id/opponentScoreText"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/opponentTeamText"
            android:layout_marginBottom="38dp" app:layout_constraintBottom_toTopOf="@+id/rosterRecycler"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="496dp"
            android:layout_height="398dp"
            android:id="@+id/rosterRecycler"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="92dp"
            android:fadeScrollbars="false"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/gameLayout"
            android:layout_marginStart="16dp"
            android:scrollbars="vertical" android:scrollIndicators="right"/>
    <TextView
            android:text="ourName"
            android:gravity="center"
            android:layout_width="238dp"
            android:layout_height="77dp"
            android:id="@+id/ourTeamText" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ourTimeoutsText"/>
    <TextView
            android:text="theirName"
            android:gravity="center"
            android:layout_width="238dp"
            android:layout_height="77dp"
            android:id="@+id/opponentTeamText" android:textSize="30sp"
            android:layout_marginBottom="2dp" app:layout_constraintBottom_toTopOf="@+id/rosterRecycler"
            app:layout_constraintStart_toEndOf="@+id/opponentTimeoutsText" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Clock"
            android:gravity="center"
            android:layout_width="265dp"
            android:layout_height="85dp"
            android:id="@+id/gameClockText" android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/ourScoreText"
            app:layout_constraintEnd_toStartOf="@+id/opponentScoreText" android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"/>
    <TextView
            android:text="0"
            android:gravity="center"
            android:layout_width="97dp"
            android:layout_height="61dp"
            android:id="@+id/ourScoreText" app:layout_constraintStart_toEndOf="@+id/ourTimeoutsText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gameClockText" android:layout_marginEnd="1dp"
            android:textSize="36sp"/>
    <TextView
            android:text="0"
            android:layout_width="97dp"
            android:gravity="center"
            android:layout_height="61dp"
            android:id="@+id/opponentScoreText"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/gameClockText"
            app:layout_constraintEnd_toStartOf="@+id/opponentTimeoutsText" android:textSize="36sp"/>
    <TextView
            android:text="ourTimeouts"
            android:layout_width="173dp"
            android:layout_height="41dp"
            android:id="@+id/ourTimeoutsText" app:layout_constraintStart_toEndOf="@+id/ourTeamText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ourScoreText" android:layout_marginEnd="2dp"
    />
    <FrameLayout
            android:layout_width="752dp"
            android:layout_height="562dp"
            android:id="@+id/gameLayout" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/gameClockText"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toStartOf="@+id/rosterRecycler" android:layout_marginEnd="16dp">

    </FrameLayout>
</android.support.constraint.ConstraintLayout>