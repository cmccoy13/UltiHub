<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TableLayout
            android:layout_width="1264dp"
            android:layout_height="647dp"
            android:id="@+id/table" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">

        <TableRow android:gravity="fill_horizontal" android:id="@+id/indexRow" android:layout_width="match_parent"
        >
            <TextView
                    android:text="@string/player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView15" android:textStyle="bold"
                    android:textAlignment="center" android:layout_weight="1" android:textSize="18sp"/>
            <TextView
                    android:text="@string/goals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView14" android:textStyle="bold"
                    android:textAlignment="center" android:layout_weight="1" android:textSize="18sp"/>
            <TextView
                    android:text="@string/assists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView13" android:layout_weight="1"
                    android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"/>
            <TextView
                    android:text="@string/passes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_weight="1"
                    android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"/>
            <TextView
                    android:text="@string/catches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="1"
                    android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"/>
            <TextView
                    android:text="@string/drops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"
                    android:textStyle="bold" android:textAlignment="center" android:textSize="18sp"/>
            <TextView
                    android:text="@string/throwaways"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                    android:textStyle="bold" android:textAlignment="center" android:textSize="18sp"/>
            <TextView
                    android:text="@string/ds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                    android:textStyle="bold" android:textAlignment="center" android:textSize="18sp"/>
            <TextView
                    android:text="@string/stalls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"
                    android:textStyle="bold" android:textAlignment="center" android:textSize="18sp"/>
            <TextView
                    android:text="@string/times_stalled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                    android:textStyle="bold" android:textAlignment="center" android:textSize="18sp"/>
            <TextView
                    android:text="@string/callahans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
                    android:textStyle="bold" android:textAlignment="center" android:textSize="18sp"/>
            <TextView
                    android:text="@string/callahans_thrown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"
                    android:textStyle="bold" android:textAlignment="center" android:textSize="18sp"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>