<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.christopher.ultihub">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".HomeActivity"
                  android:parentActivityName=".LoginActivity"
                  android:screenOrientation="landscape">
        </activity>

        <activity
                android:name=".LoginActivity"
                android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".TeamDetailActivity"
                android:parentActivityName=".HomeActivity"
                android:screenOrientation="landscape" />
        <activity
                android:name=".TournamentDetailActivity"
                android:parentActivityName=".HomeActivity"
                android:screenOrientation="landscape" />
        <activity
                android:name=".TeamCreateActivity"
                android:parentActivityName=".HomeActivity"
                android:screenOrientation="landscape" />
        <activity
                android:name=".TournamentCreateActivity"
                android:parentActivityName=".HomeActivity"
                android:screenOrientation="landscape" />
        <activity
                android:name=".GameCreateActivity"
                android:parentActivityName=".HomeActivity"
                android:screenOrientation="landscape" />
        <activity
            android:name=".LiveGameActivity"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="landscape" />

        <activity
                android:name=".PlayerCreateActivity"
                android:parentActivityName=".HomeActivity"
                android:screenOrientation="landscape" />
        <activity
                android:name=".StatsActivity"
                android:parentActivityName=".HomeActivity"
                android:screenOrientation="landscape" />

    </application>

</manifest>